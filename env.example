# Configurações Gerais
NODE_ENV=development
PORT=3000

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# Banco de Dados PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=easy_hotel
DB_USER=postgres
DB_PASSWORD=password

# Redis
REDIS_URL=redis://localhost:6379

# MongoDB
MONGODB_URL=mongodb://admin:password@localhost:27017/easy_hotel_logs

# Serviços
RESERVATIONS_SERVICE_URL=http://localhost:3001
ROOMS_SERVICE_URL=http://localhost:3002
USERS_SERVICE_URL=http://localhost:3003
PAYMENTS_SERVICE_URL=http://localhost:3004
NOTIFICATIONS_SERVICE_URL=http://localhost:3005

# Service-to-Service API Keys (para comunicação entre serviços)
RESERVATIONS_API_KEY=reservations-secret-key
PAYMENTS_API_KEY=payments-secret-key
NOTIFICATIONS_API_KEY=notifications-secret-key
ROOMS_API_KEY=rooms-secret-key

# Email (para notificações)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# SMS (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Pagamentos (Stripe)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# Monitoramento
PROMETHEUS_PORT=9090
GRAFANA_PORT=3006

# Logs
LOG_LEVEL=info
LOG_FORMAT=combined 